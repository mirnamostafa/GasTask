<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.FitWindowsLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background"
    tools:context="com.mirnamabrouk.gas.Login"
    android:gravity="center_vertical">

    <EditText
          android:id="@+id/text1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="اسم المستخدم"
          android:textColorHint="@color/colorPrimary"
          android:textSize="23dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="5dp"
          android:drawableRight="@mipmap/username_icon"
          android:drawablePadding="10dp"
          android:background="@drawable/textview"
          />
    <EditText
          android:id="@+id/text2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="كلمةالمرور"
          android:textColorHint="@color/colorPrimary"
          android:textSize="23dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="5dp"
          android:drawableRight="@mipmap/password_icon"
          android:drawablePadding="10dp"
          android:background="@drawable/textview"
          />
    <TextView
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نسيت كلمة المرور؟"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="5dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="دخول"
        android:background="@drawable/button"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_marginTop="15dp"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/create_account"
        android:textColor="#fff"
        android:textSize="15dp"/>
    <view
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#fff"
        android:layout_marginRight="143dp"
        android:layout_marginLeft="143dp"
        />

</android.support.v7.widget.FitWindowsLinearLayout>
